<header class="page-header">
  <h1>Sign In</h1>
</header>

<% if flash[:alert] %>
  <div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>

<%= form_tag '/login' do %>
  Email: <%= email_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>
<% end %>
