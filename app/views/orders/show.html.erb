<section class="orders-show">

  <header class="page-header">
    <h1>Thank you for your order!</h1>
  </header>
  
  <div class="order-summary jumbotron">
    <h2>Your Order Details</h2>
    <ul class="list-group">
      <li class="list-group-item">Order ID: <%= @order.id %></li>
      <li class="list-group-item">Email Address: <%= @order.email %></li>
      <li class="list-group-item">Order Total: <%= humanized_money_with_symbol (@order.total_cents.to_f / 100) %></li>
    </ul>
  </div>

  <h3>Get excited for these new arrivals for your collection! </h3>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Total Cost</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <%= render 'line_item', item: item %>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
